<?xml version="1.0"?>
<config>
  <modules>
    <Happilyunmarried_Valentines>
      <version>0.1.0</version>
    </Happilyunmarried_Valentines>
  </modules>
  <frontend>
    <routers>
      <valentines>
        <use>standard</use>
          <args>
            <module>Happilyunmarried_Valentines</module>
            <frontName>valentines</frontName>
          </args>
      </valentines>
    </routers>
	<layout>
	  <updates>
		<valentines>
		  <file>valentines.xml</file>
		</valentines>
	  </updates>
	</layout>
  </frontend>
  <global>
    <helpers>
      <valentines>
        <class>Happilyunmarried_Valentines_Helper</class>
      </valentines>
    </helpers>
	<blocks>
	  <valentines>
		<class>Happilyunmarried_Valentines_Block</class>
	  </valentines>
	</blocks>
	<models>
	  <valentines>
		<class>Happilyunmarried_Valentines_Model</class>
		<resourceModel>valentines_mysql4</resourceModel>
	  </valentines>
	  <valentines_mysql4>
		<class>Happilyunmarried_Valentines_Model_Mysql4</class>
		<entities>		  
			  <valentines>
				<table>valentines</table>
			  </valentines>
        </entities>
	  </valentines_mysql4>
	</models>
	<resources>
	  <valentines_setup>
		<setup>
		  <module>Happilyunmarried_Valentines</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </valentines_setup>
	  <valentines_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </valentines_write>
	  <valentines_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </valentines_read>
	</resources>
  </global>

  <admin>
	<routers>
	  <valentines>
	    <use>admin</use>
		<args>
		  <module>Happilyunmarried_Valentines</module>
		  <frontName>admin_valentines</frontName>
		</args>
	  </valentines>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <valentines module="valentines">
		<title>Valentines</title>
		<sort_order>100</sort_order>
		<children>
		  <valentines module="valentines">
		    <title>Manage Valentines</title>
			<sort_order>10</sort_order>
			<action>admin_valentines/adminhtml_valentines</action>
		  </valentines>
<!-- 		  <Valentines_banner>
			<sort_order>20</sort_order>
			<title>Manage Xxxmas Banner</title>
			<action>admin_Valentines/adminhtml_banner</action>
		  </Valentines_banner> 
-->
		</children>
	  </valentines>
	</menu>

	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<valentines translate="title" module="valentines">
			  <title>Valentines</title>
			  <sort_order>1000</sort_order>
			  <children>
				  <valentines translate="title">
					<title>Manage Valentines</title>
					<sort_order>10</sort_order>
				  </valentines>
			  </children>
			</valentines>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<valentines>
		  <file>valentines.xml</file>
		</valentines>
	  </updates>
	</layout>
  </adminhtml>
</config> 
