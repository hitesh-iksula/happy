<?php if ($this->displayBoth()):?>
<tr>
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <div class="totals_table_labels"><?php echo $this->helper('tax')->__('Subtotal (Excl. Tax)') ?></div>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <div class="totals_table_amounts"><?php echo $this->helper('explore')->formatPrice($this->getTotal()->getValueExclTax()) ?></div>
    </td>
</tr>
<tr>
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <div class="totals_table_labels"><?php echo $this->helper('tax')->__('Subtotal (Incl. Tax)') ?></div>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <div class="totals_table_amounts"><?php echo $this->helper('explore')->formatPrice($this->getTotal()->getValueInclTax()) ?></div>
    </td>
</tr>
<?php else : ?>
    <?php
        $coupon_code = Mage::getSingleton('checkout/session')->getQuote()->getCouponCode();
    if($coupon_code):
    ?>
    <tr>
        <td style="<?php echo $this->getStyle() ?>" class="" colspan="<?php echo $this->getColspan(); ?>">
            <div class="totals_table_labels" id="total-tabel">
                <?php echo $this->__('Order Amt') ?>
            </div>
        </td>
        <td style="<?php echo $this->getStyle() ?>" class="">
            <div class="totals_table_amounts"><?php echo $this->helper('explore')->formatPrice($this->getTotal()->getValue()) ?></div>
        </td>
    </tr>
    <?php endif;?>
<?php endif;?>
