<form id="discount-coupon-form" action="<?php echo $this->getUrl('checkout/cart/couponPost') ?>" method="post">
    <div class="discount">
        <div class="discount-form">
            <?php if(strlen($this->getCouponCode())): ?>
                <div class="label-reveal read-only">
                    <div class="checkbox_status checked"></div>
                    <div class="door">
                        <div class="label">Congratulations! Coupon applied.</div>
                        <div class="coupan-tick"></div>
                        <button class="bare">Cancel</button>
                        <input type="hidden" name="remove" id="coupon_remove" value="1"/>
                    </div>
                </div>
            <?php else: ?>
                <div class="label-reveal">
                    <div class="checkbox_status unchecked"></div>
                    <div class="label door">
                        <label for="coupon_code" class="checkbox">I have a discount coupon!</label>
                    </div>
                    <div class="reveal">
                        <input class="input-text required-entry" id="coupon_code" name="coupon_code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>" placeholder="Coupon Code" />
                        <button class="happy_button green cart_coupon">Apply</button>
                    </div>
                    <div class="result" id="valid-coupon">
                        <div class="label">Congratulations! Coupon applied.</div>
                        <div class="coupan-tick"></div>
                        <button class="bare">Cancel</button>
                    </div>

                     <div class="result" id="not-valid">
                        <div class="label">Coupon code is not valid</div>
                    </div>
                <input type="hidden" name="remove" id="coupon_remove" value="0"/>
            <?php endif; ?>

            <input type="hidden" name="isAjax" value="1"/>
        </div>
    </div>
</form>

