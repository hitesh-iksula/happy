<?php if('apples' == 'bananas'): ?>

    <?php if ($this->displayBoth()):?>
    <tr>
        <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
            <div class="totals_table_labels"><?php echo $this->getExcludeTaxLabel() ?></div>
        </td>
        <td style="<?php echo $this->getStyle() ?>" class="a-right">
            <div class="totals_table_amounts"><?php echo $this->helper('explore')->formatPrice($this->getShippingExcludeTax()) ?></div>
        </td>
    </tr>
    <tr>
        <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
            <div class="totals_table_labels"><?php echo $this->getIncludeTaxLabel() ?></div>
        </td>
        <td style="<?php echo $this->getStyle() ?>" class="a-right">
            <div class="totals_table_amounts"><?php echo $this->helper('explore')->formatPrice($this->getShippingIncludeTax()) ?></div>
        </td>
    </tr>
    <?php elseif($this->displayIncludeTax()) : ?>
    <tr>
        <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
            <div class="totals_table_labels"><?php echo $this->getTotal()->getTitle() ?></div>
        </td>
        <td style="<?php echo $this->getStyle() ?>" class="a-right">
            <div class="totals_table_amounts"><?php echo $this->helper('explore')->formatPrice($this->getShippingIncludeTax()) ?></div>
        </td>
    </tr>
    <?php else:?>
    <tr>
        <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
            <div class="totals_table_labels"><?php echo $this->__('Shipping & Handling') ?></div>
        </td>
        <td style="<?php echo $this->getStyle() ?>" class="a-right">
            <div class="totals_table_amounts"><?php echo $this->helper('explore')->formatPrice($this->getShippingExcludeTax()) ?></div>
        </td>
    </tr>
    <?php endif;?>

<?php endif;?>
