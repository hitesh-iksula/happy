<form id="search_mini_form" action="<?php echo $this->helper('catalogsearch')->getResultUrl() ?>" method="get">
    <div class="form_search">
        <input id="search" type="text" name="<?php echo $this->helper('catalogsearch')->getQueryParamName() ?>" value="<?php echo $this->helper('catalogsearch')->getEscapedQueryText() ?>" class="input-text" autocomplete="off" placeholder="Your search is my command!" />
        <input type="hidden" name="order" value="relevance" />
        <input type="submit" title="<?php echo $this->__('Search') ?>" class="button" id="search_btn" value="Search"/>
    </div>
</form>

<script type="text/javascript">
jQuery(document).ready(function($) {
    $('#search').autoSuggest({
        container: '#search_autocomplete',
        row: 'li',
        rowText: 'span',
        activeClass: 'active',
        searchUrl: "<?php echo $this->helper('catalogsearch')->getFetchUrl(); ?>",
        form: '#search_mini_form'
    });
});

jQuery('#search_btn').live('click', function(e){
    if (jQuery('#search').val()!= ''){
        $('#search').submit();
    }
    else
    {
        e.preventDefault();
    }
});
</script>
